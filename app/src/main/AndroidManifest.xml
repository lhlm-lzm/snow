<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jamin.snow">

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/snow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/snow"
        android:supportsRtl="true"
        android:theme="@style/Theme.Snow">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StoryActivity"
            android:theme="@style/Theme.Snow.NoAnimation"
            android:launchMode="singleTask">
        </activity>

        <activity
            android:name=".ImagePreviewActivity"
            android:theme="@style/Theme.Snow.CenterAnimation"
            android:launchMode="singleTask">
        </activity>


    </application>

</manifest>